{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start vite dev server",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "command": "npm run dev"
    },
    {
      "label": "npm run build (for production)",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "command": "npm run build"
    },
    {
      "label": "build FastAPI server",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "cd frontend && npm run build -- --mode backend && cd ../backend && uv build --wheel"
    }
  ]
}
